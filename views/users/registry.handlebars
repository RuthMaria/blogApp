{{#each error}}

<div class="alert alert-danger"> {{text}} </div>
{{else}}

{{/each}}

<section id="section">
    <h2 class="h3" id="title">Create an account</h2><br>
    <div class="card">
        <div class="card-body">
            <form action="" method="post">
                <label for="name">Full name <sub>*</sub></label>
                <input type="text" name="name" class="form-control" placeholder="Full name" required><br>

                <label for="email">E-mail <sub>*</sub></label>
                <input type="email" name="email" class="form-control" placeholder="E-mail address" required><br>

                <label for="password">Password <sub>*</sub></label>
                <input type="password" name="password" class="form-control" placeholder="Password" required><br>

                <label for="password2">Repeat your password <sub>*</sub></label>
                <input type="password" name="password2" class="form-control" placeholder="Confirm your password"
                    required>

                <button type="submit" class="btn btn-primary btn-lg btn-block mt-4">Create</button>

            </form>
        </div>
    </div>
</section>

