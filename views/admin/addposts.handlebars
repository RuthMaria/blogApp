{{#each error}}
    <div class="alert alert-danger">{{text}}</div>

    {{else}}
{{/each}}

<div class="card mx-auto" style="width: 60rem">
    <div class="card-body">
        <h3 class="text-center mb-4">New post</h3>
        <form action="/admin/posts/new" method="POST">
            <label for="title">Title </label>
            <input type="text" name="title" class="form-control mb-3" placeholder="Title" required>

            <label for="slug">Slug </label>
            <input type="text" name="slug" class="form-control mb-3" placeholder="Slug" required>

            <label for="description">Description </label>
            <input type="text" name="description" class="form-control mb-3" placeholder="Description"required>
            
            <label for="content">Content </label>
            <textarea name="content" class = 'form-control mb-3' placeholder="Content" required></textarea>

            <label for="category">Category </label>
            <select name="category" class="custom-select">
                <option selected>Choose...</option>
                {{#each categories}}
                    <option value="{{_id}}">{{name}}</option>
                {{else}}
                    <option value="0"> No registered categories </option>
                {{/each}}
            </select>

            <button type="submit" class="btn btn-success mt-4" style="float:right"> Create </button>
        </form>
    </div>
</div><br>

